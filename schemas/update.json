{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "title": "The Root Schema",
    "required": [
      "amazon_url",
      "author",
      "language",
      "pages",
      "publisher",
      "title",
      "year"
    ],
    "properties": {
      "amazon_url": {
        "$id": "#/properties/amazon_url",
        "type": "string",
        "title": "The Amazon_url Schema",
        "default": "",
        "examples": [
          "https://www.amazon.com/gp/product/0399226907"
        ],
        "pattern": "^(.*)$"
      },
      "author": {
        "$id": "#/properties/author",
        "type": "string",
        "title": "The Author Schema",
        "default": "",
        "examples": [
          "Eric Carle"
        ],
        "pattern": "^(.*)$"
      },
      "language": {
        "$id": "#/properties/language",
        "type": "string",
        "title": "The Language Schema",
        "default": "",
        "examples": [
          "english"
        ],
        "pattern": "^(.*)$"
      },
      "pages": {
        "$id": "#/properties/pages",
        "type": "number",
        "multipleOf": 1,
        "minimum": 0,
        "title": "The Pages Schema",
        "default": 0,
        "examples": [
          26
        ]
      },
      "publisher": {
        "$id": "#/properties/publisher",
        "type": "string",
        "title": "The Publisher Schema",
        "default": "",
        "examples": [
          "Philomel Books"
        ],
        "pattern": "^(.*)$"
      },
      "title": {
        "$id": "#/properties/title",
        "type": "string",
        "title": "The Title Schema",
        "default": "",
        "examples": [
          "The Very Hungry Caterpillar"
        ],
        "pattern": "^(.*)$"
      },
      "year": {
        "$id": "#/properties/year",
        "type": "integer",
        "title": "The Year Schema",
        "default": 0,
        "examples": [
          1994
        ]
      }
    }
  }